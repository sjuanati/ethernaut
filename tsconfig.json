{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["@types/node", "@types/chai", "@types/mocha"],
      "typeRoots": ["./node_modules/@types", "./types"],
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "build", "cache", "artifacts"]
  }
